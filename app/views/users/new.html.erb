 <h1>Form-tag</h1>
 <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'username' %>
      <%= text_field_tag 'username', @users.username %>
      <br /> <br />

      <%= label_tag 'email' %>
      <%= text_area_tag 'email', @users.email %>
      <br /> <br />

      <%= label_tag 'bio' %>
      <%= text_field_tag 'bio', @users.bio %>
      <br /> <br />

      <%= submit_tag "Create user" %>

    <% end %>



